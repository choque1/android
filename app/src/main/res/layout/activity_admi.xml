<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admi">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hambur"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8000000"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/fotoperfil"
            android:layout_width="120dp"
            android:layout_height="132dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/nombre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp"
            android:text="Nombre"
            android:background="@drawable/input"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            android:paddingRight="20dp"
            android:textColor="#fff"
            android:textColorHint="#ccc"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/ci2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:text="CI"
            android:textColor="#fff"
            android:textColorHint="#ccc"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/nombre2"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/telefono2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:text="Telefono"
            android:textColorHint="#ccc"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ci2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/correo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:text="Correo"
            android:textColor="#fff"
            android:textColorHint="#ccc"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/telefono2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input"
            android:paddingLeft="10dp"
            android:paddingTop="9dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:text="Tipo"
            android:textColor="#fff"
            android:textColorHint="#ccc"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correo2" />

        <Button
            android:id="@+id/verestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fondocolor"
            android:paddingLeft="5dp"
            android:text="Ver restaurant"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fotoperfil" />

        <Button
            android:id="@+id/crestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fondocolor"
            android:paddingLeft="5dp"
            android:text="Crear restaurant"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tipo" />

        <Button
            android:id="@+id/edicuenta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fondocolor"
            android:paddingLeft="5dp"
            android:text="Editar cuenta"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crestaurant"
            app:layout_constraintVertical_bias="0.285" />

        <Button
            android:id="@+id/elicuenta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fondocolor"
            android:paddingLeft="5dp"
            android:text="Eliminar cuenta"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verestaurant"
            app:layout_constraintVertical_bias="0.285" />

        <Button
            android:id="@+id/irpedidos"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/fondocolor"
            android:paddingLeft="5dp"
            android:text="Controlar pedidos"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edicuenta1" />

</android.support.constraint.ConstraintLayout>